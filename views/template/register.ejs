<div class="main">

    <div class="container">
        <div class="signup-content">
            <div class="signup-img">
                <img src="./img/form-img.jpg" alt="">

            </div>
            <div class="signup-form">
                <form method="POST" class="register-form" id="register-form">
                    <div class="form-row">
                        <div class="form-group">
                            <div class="form-input">
                                <label for="first_name" class="required">First name</label>
                                <input type="text" name="first_name" id="first_name" />
                            </div>
                            <div class="form-input">
                                <label for="last_name" class="required">Last name</label>
                                <input type="text" name="last_name" id="last_name" />
                            </div>
                            <div class="form-select">
                                <div class="label-flex">
                                    <label for="meal_preference">Gender</label>

                                </div>
                                <div class="select-list">
                                    <select name="meal_preference" id="meal_preference">
                                        <option value="Vegetarian">Male</option>
                                        <option value="Kosher">Female</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-input">
                                <label for="email" class="required">Email</label>
                                <input type="text" name="email" id="email" />
                            </div>
                            <div class="form-input">
                                <label for="phone_number" class="required">Mobile number</label>
                                <input type="text" name="phone_number" id="phone_number" />
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="form-input">
                                <label for="company" class="required">Votar ID</label>
                                <input type="text" name="company" id="company" />
                            </div>

                            <div class="form-radio">
                                <div class="label-flex">
                                    <label for="role">Login Role</label>
                                    <a href="#" class="form-link">Login Details</a>
                                </div>
                                <div class="form-radio-group">
                                    <div class="form-radio-item">
                                        <input type="radio" name="Voter" id="Admin" checked>
                                        <label for="Admin">Admin</label>
                                        <span class="check"></span>
                                    </div>
                                    <div class="form-radio-item">
                                        <input type="radio" name="Voter" id="cheque">
                                        <label for="cheque">Voter</label>
                                        <span class="check"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-input">
                                <label for="chequeno">Login Email</label>
                                <input type="text" name="chequeno" id="chequeno" />
                            </div>
                            <div class="form-input">
                                <label for="blank_name">Password</label>
                                <input type="text" name="blank_name" id="blank_name" />
                            </div>
                            <div class="form-input">
                                <label for="payable">Confirm Password</label>
                                <input type="text" name="payable" id="payable" />
                            </div>
                        </div>
                    </div>
                    <div class="donate-us">
                        <label>Already have an account? <a href="login.html"> login</a> instead. </label>
                        <div class="price_slider ui-slider ui-slider-horizontal">
                            <div id="slider-margin"></div>
                            <span class="donate-value" id="value-lower"></span>
                        </div>
                    </div>
                    <div class="form-submit">
                        <input type="submit" value="Submit" class="submit" id="submit" name="submit" />
                        <input type="submit" value="Reset" class="submit" id="reset" name="reset" />
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>